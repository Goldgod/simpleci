{% extends 'layout/admin.html.twig' %}

{% block title %}
    {% if entity.id is null %} Add ssh key{% else %} Edit ssh key{% endif %}
{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li>Settings</li>
        <li><a href="{{ path(controllerDescription.routes['list']) }}">Ssh keys</a></li>
        <li class="active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-7">

            <div class="box box-primary" role="presentation">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <div class="box-body">
                    {{ form_start(form) }}
                    {{ form_row(form.name, {'label': 'Name'}) }}
                    {{ form_row(form.publicKey, {'label': 'Public key', 'attr': {'rows': 6} }) }}
                    {{ form_row(form.privateKey, {'label': 'Private key', 'attr': {'rows': 10} }) }}
                    {{ form_rest(form) }}

                    <button class="btn btn-primary">Save</button>
                    <a href="{{ path(controllerDescription.routes['list']) }}" class="btn btn-default">Cancel</a>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}