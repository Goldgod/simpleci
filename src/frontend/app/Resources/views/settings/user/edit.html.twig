{% extends 'layout/admin.html.twig' %}

{% block title %}
    {% if entity.id is null %} Add user {% else %} Edit user {% endif %}
{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li>Settings</li>
        <li><a href="{{ path(controllerDescription.routes['list']) }}">Users</a></li>
        <li class="active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-7">

            <div class="box box-primary" role="presentation">
                <div class="box-header">
                    <h3 class="box-title">User</h3>
                </div>
                <div class="box-body">
                    {{ form_start(form) }}
                    {{ form_row(form.username, {'label': 'Username'}) }}
                    {{ form_row(form.email, {'label': 'Email'}) }}
                    {{ form_row(form.plainPassword, {'label': 'Password'}) }}
                    {{ form_row(form.enabled, {'label': 'Enabled'}) }}
                    {{ form_rest(form) }}

                    <button class="btn btn-primary">Save</button>
                    <a href="{{ path(controllerDescription.routes['list']) }}" class="btn btn-default">Cancel</a>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}