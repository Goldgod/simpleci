{% extends 'layout/admin.html.twig' %}

{% block title %}
    {% if entity.id is null %} Add provider{% else %} Edit provider{% endif %}
{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li>Settings</li>
        <li>Providers</li>
        <li><a href="{{ path(controllerDescription.routes['list']) }}">Google compute providers</a></li>
        <li class="active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-7">

            <div class="box box-primary" role="presentation">
                <div class="box-header">
                    <h3 class="box-title">Google compute provider</h3>
                </div>
                <div class="box-body">
                    {{ form_start(form) }}
                    {{ form_row(form.name, {'label': 'Name'}) }}
                    {{ form_row(form.gcAccount, {'label': 'Google cloud account'}) }}
                    {{ form_row(form.project, {'label': 'Project name'}) }}
                    {{ form_row(form.zone, {'label': 'Zone'}) }}
                    {{ form_row(form.machineType, {'label': 'Machine type'}) }}
                    {{ form_row(form.snapshotName, {'label': 'Shanshot name'}) }}
                    {{ form_row(form.diskType, {'label': 'Disk type'}) }}
                    {{ form_row(form.diskSize, {'label': 'Disk size'}) }}
                    {{ form_rest(form) }}

                    <button class="btn btn-primary">Save</button>
                    <a href="{{ path(controllerDescription.routes['list']) }}" class="btn btn-default">Cancel</a>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}