{% extends 'layout/admin.html.twig' %}

{% block title %}
    Create github project
{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li>Settings</li>
        <li><a href="{{ path('settings.project.list') }}">Projects</a></li>
        <li class="active">Create github project</li>
    </ol>
{% endblock %}

{% block content %}

    {% embed 'core/box.html.twig' %}
        {% block title %}Github project{% endblock %}
        {% block body %}

            {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_row(form.project_identity) }}
            {{ form_row(form.repository_url) }}
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}

<hr/>
            {{ form_row(form.sshKey) }}
            {{ form_row(form.cache) }}
            {{ form_row(form.provider) }}
            {{ form_row(form.add_deploy_key, {'label': 'Add ssh deploy key to project'}) }}


            {{ form_rest(form) }}
            <button type="submit" class="btn btn-default">Create</button>
            <a href="{{ path('settings.project.list') }}" class="btn btn-default">Cancel</a>
            {{ form_end(form) }}
            {{ form_end(form) }}

        {% endblock %}
    {% endembed %}



{% endblock %}